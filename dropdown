	var contract = SyllabiContract.at('0xf02610f5ea1b9e86a5d61b03256bf0376f11eee7');

	console.log(contract);

	function add_option (select_id, text) {
var select = document.getElementById(select_id);
select.options[select.options.length] = new Option(text);
}

function clear_options (select_id) {
var select = document.getElementById(select_id);
select.options.length = 0;
}










contract.getUniNumber(function (error,result) {
if(!error){

 for (var i = 0; i < result; i++) {
	contract.getUniversityById(i,function (error2,result2) {
if(!error2){
	add_option("sel_universities",result2);

}
else{
	
	console.log(error2);
	
}
});
}
	
}
else{
	console.log(error);
	
}
});










document.getElementById('sel_universities').onclick = sel_universities_onchange;

function sel_universities_onchange () {
var sel_universities = document.getElementById("sel_universities");
clear_options("sel_semesters");
clear_options("sel_departments");
contract.getSemesterNumber(sel_universities.selectedIndex,function (error,result){
if(!error){
for (var i=0 ; i<result ; i++){
contract.getSemesterById(sel_universities.selectedIndex,i,function (error2,result2) {
if(!error2){
	
	add_option("sel_semesters",result2);

}
else{
	
	console.log(error2);

}
});

}

}
else{
	console.log(error);
	
}
});

}





document.getElementById('sel_semesters').onclick = sel_semesters_onchange;

function sel_semesters_onchange () {
var sel_universities = document.getElementById("sel_universities");
var sel_semesters = document.getElementById("sel_semesters");
clear_options("sel_departments");
contract.getDepartmentNumber(sel_universities.selectedIndex,sel_semesters.selectedIndex,function (error,result){
if(!error){
for (var i=0 ; i<result ; i++){
contract.getDepartmentById(sel_universities.selectedIndex,sel_semesters.selectedIndex,i,function (error2,result2) {
if(!error2){
	
	add_option("sel_departments",result2);

}
else{
	
	console.log(error2);
	
}
});

}

}
else{
	console.log(error);
	
}
});

}





document.getElementById('sel_departments').onclick = sel_departments_onchange;

function sel_departments_onchange () {
var sel_universities = document.getElementById("sel_universities");
var sel_semesters = document.getElementById("sel_semesters");
var sel_departments = document.getElementById("sel_departments");

clear_options("sel_courses");
contract.getCourseNumber(sel_universities.selectedIndex,sel_semesters.selectedIndex,sel_departments.selectedIndex,function (error,result){
if(!error){
for (var i=0 ; i<result ; i++){
contract.getCourseById(sel_universities.selectedIndex,sel_semesters.selectedIndex,sel_departments.selectedIndex,i,function (error2,result2) {
if(!error2){
	
	add_option("sel_courses",result2);

}
else{
	
	console.log(error2);
	
}
});

}

}
else{
	console.log(error);	
}
});

}


console.log(contract);

		$('#button').click(function() {
			var sel_universities = document.getElementById("sel_universities");
			var sel_semesters = document.getElementById("sel_semesters");
			var sel_departments = document.getElementById("sel_departments");
			var sel_courses = document.getElementById("sel_courses");
	
			contract.getHash(sel_universities.selectedIndex,sel_semesters.selectedIndex,sel_departments.selectedIndex,
			sel_courses.selectedIndex,function(error,result) {
			if(!error)
			$("#showsyllabus").html("Hash is : " + result);
			else
			console.log(error);
		});
			
});

 

</script>


    

